{
  "env": {
    "development": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "useBuiltIns": "usage", // alternative mode: "entry"
            "corejs": 3, // default would be 2
            "targets": "> 0.25%, not dead"
            // "targets": { "node": "current" }
          }
        ]
      ]
    }
  },
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "regenerator": true,
        "corejs": 3
      }
    ]
  ]
}
